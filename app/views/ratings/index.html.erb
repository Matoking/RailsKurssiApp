<p id="notice"><%= notice %></p>

<h1>Listing Ratings</h1>

<p>Number of ratings: <%= @ratings.count %></p>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-4">
            <h4>Best beers</h4>
            <% if @best_beers.empty? %>
            <p>No ratings</p>
            <% else %>
            <%= render 'list', entries: @best_beers %>
            <% end %>
        </div>
        <div class="col-md-4">
            <h4>Best breweries</h4>
            <% if @best_breweries.empty? %>
            <p>No ratings</p>
            <% else %>
            <%= render 'list', entries: @best_breweries %>
            <% end %>
        </div>
        <div class="col-md-4">
            <h4>Best styles</h4>
            <% if @best_styles.empty? %>
            <p>No ratings</p>
            <% else %>
            <%= render 'list', entries: @best_styles %>
            <% end %>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <h4>Most active users</h4>

            <table class="table table-hover">
                <thead>
                    <tr>
                        <th></th>
                        <th>favorite beer</th>
                        <th>preferred style</th>
                        <th>favorite brewery</th>
                        <th>ratings</th>
                    </tr>
                </thead>
                <tbody>
                    <% @active_users.each do |user| %>
                    <tr>
                        <td><%= link_to user.username, user_path(user) %></td>
                        <td><%= user.favorite_beer %></td>
                        <td><%= user.favorite_style %></td>
                        <td><%= user.favorite_brewery %></td>
                        <td><%= user.ratings.count %></td>
                    </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <h4>Recent ratings</h4>

            <ul>
                <% @recent_ratings.each do |rating| %>
                <li><%= rating.beer %> <%= link_to rating.user, user_path(rating.user) %></li>
                <% end %>
            </ul>
        </div>
    </div>
</div>

<br>

<%= link_to 'New rating', new_rating_path, class:"btn btn-primary" %>
<%= link_to 'List of beers', beers_path %>
